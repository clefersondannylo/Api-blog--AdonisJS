{
  "typescript": true,
  "commands": [
    "./commands",
    "@adonisjs/core/commands",
    "@adonisjs/lucid/build/commands"
  ],
  "exceptionHandlerNamespace": "App/Exceptions/Handler",
  "aliases": {
    "App": "app",
    "Config": "config",
    "Database": "database",
    "Contracts": "contracts"
  },
  "preloads": [
    "./start/routes",
    "./start/kernel"
  ],
  "providers": [
    "./providers/AppProvider",
    "@adonisjs/core",
    "@adonisjs/lucid",
    "@adonisjs/auth"
  ],
  "metaFiles": [
    {
      "pattern": "public/**",
      "reloadServer": false
    }
  ]
}
